<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Register Your Home on AirBnB</h1>
      <form action="/host/add-home" method="POST" class="max-w-md mx-auto">
        <div>
          <label for="price_per_night" class="block text-gray-700 font-medium mb-2">Enter your House Name:</label>
          <input 
            type="text" 
            name="houseName" 
            id="houseName" 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none"
          />
        </div>

        <div>
          <label for="price" class="block text-gray-700 font-medium mb-2">Enter per night:</label>
          <input 
            type="number" 
            name="price" 
            id="price" 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none"
          />
        </div>

        <div>
          <label for="location" class="block text-gray-700 font-medium mb-2">Enter Location:</label>
          <input 
            type="text" 
            name="location" 
            id="location" 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none"
          />
        </div>

        <div>
          <label for="rating" class="block text-gray-700 font-medium mb-2">Enter Rating (e.g., 4.5):</label>
          <input 
            type="number" 
            name="rating" 
            id="rating" 
            step="0.1"
            class="w-full px-4 py-2 border border-gray-700 rounded-lg "
          />
        </div>

        <div>
          <label for="photoUrl" class="block text-gray-700 font-medium mb-2">
            Enter photo link:
          </label>
          <input 
            type="url" 
            id="photoUrl" 
            name="photoUrl" 
            placeholder="https://example.com/photo.jpg"
            class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-red-400 mb-4"
            required
          />

          <input type="submit" value="Submit" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
        </div>
      </form>
    </main>
  </body>
</html>


  