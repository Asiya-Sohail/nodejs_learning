<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
         <main class="container mx-auto bg-white shadow-xl rounded-2xl p-8 mt-10 max-w-6xl">
       <div class="text-center mb-10">
         <h2 class="text-4xl text-red-600 font-bold mb-3">
           Hey Host, here are your Homes
         </h2>
         <div class="w-24 h-1 bg-red-500 mx-auto rounded-full"></div>
       </div>
       
       <% if (RegisteredHomes && RegisteredHomes.length > 0) { %>
         <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
           <% RegisteredHomes.forEach((home, index) => { %>
             <div class="bg-white border border-gray-200 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden">
               <!-- Image Section -->
               <div class="relative h-48 bg-gradient-to-br from-red-100 to-red-200">
                 <% if (home.photoUrl) { %>
                   <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
                 <% } else { %>
                   <div class="w-full h-full flex items-center justify-center">
                     <svg class="w-16 h-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                     </svg>
                   </div>
                 <% } %>
                 <!-- Price Badge -->
                 <div class="absolute top-4 right-4 bg-white bg-opacity-90 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg">
                   <span class="text-red-600 font-bold text-lg">$<%= home.price %></span>
                   <span class="text-gray-500 text-sm">/night</span>
                 </div>
                 <!-- Rating Badge -->
                 <div class="absolute top-4 left-4 bg-yellow-400 text-white px-2 py-1 rounded-full text-sm font-semibold flex items-center space-x-1">
                   <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                     <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                   </svg>
                   <span><%= home.rating %></span>
                 </div>
               </div>
               
               <!-- Content Section -->
               <div class="p-6">
                 <div class="flex items-start justify-between mb-3">
                   <h3 class="text-xl font-bold text-gray-800 line-clamp-1">
                     <%= home.houseName %>
                   </h3>
                   <div class="flex-shrink-0">
                     <svg class="w-5 h-5 text-gray-400 hover:text-red-500 cursor-pointer transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                     </svg>
                   </div>
                 </div>
                 
                 <!-- Location -->
                 <div class="flex items-center text-gray-600 mb-4">
                   <svg class="w-4 h-4 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                   </svg>
                   <span class="text-sm"><%= home.location %></span>
                 </div>
                 
                 
                 <div class="flex gap-2">
                    <button class="w-[50%] bg-gradient-to-r from-green-500 to-green-600 text-white py-3 px-4 rounded-xl font-semibold hover:from-green-600 hover:to-green-700 transform hover:scale-105 transition-all duration-300 shadow-lg">
                    Edit
                  </button>
                  <button class="w-[50%] bg-gradient-to-r from-red-500 to-red-600 text-white py-3 px-4 rounded-xl font-semibold hover:from-red-600 hover:to-red-700 transform hover:scale-105 transition-all duration-300 shadow-lg">
                    Delete
                  </button>
                 </div>
               </div>
             </div>
           <% }) %>
         </div>
         
         <!-- Summary -->
         <div class="mt-10 text-center">
           <div class="inline-flex items-center space-x-2 bg-gray-50 px-6 py-3 rounded-full">
             <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
             </svg>
             <span class="text-gray-700 font-medium">
               <%= RegisteredHomes.length %> home<%= RegisteredHomes.length !== 1 ? 's' : '' %> available
             </span>
           </div>
         </div>
       <% } else { %>
         <div class="text-center py-16">
           <div class="mb-8">
             <div class="w-32 h-32 bg-gradient-to-br from-red-100 to-red-200 rounded-full flex items-center justify-center mx-auto mb-6">
               <svg class="w-16 h-16 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
               </svg>
             </div>
           </div>
           <h3 class="text-3xl font-bold text-gray-700 mb-4">No homes available yet</h3>
           <p class="text-gray-500 mb-8 max-w-md mx-auto text-lg">
             Be the first to add a stunning home to our platform and start earning from your property!
           </p>
           <a href="/host/add-home" class="inline-flex items-center space-x-3 bg-gradient-to-r from-red-500 to-red-600 text-white px-10 py-4 rounded-xl font-semibold hover:from-red-600 hover:to-red-700 transform hover:scale-105 transition-all duration-300 shadow-xl text-lg">
             <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
             </svg>
             <span>Add Your First Home</span>
           </a>
         </div>
       <% } %>
     </main>
  </body>
</html>